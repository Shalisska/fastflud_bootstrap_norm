//форма регистрации
form.form.form--reg(action="#" method="post" name="registration" id="registration")
    p.form__title.form__title--main Регистрация/Вход
    
    //поле входа
    fieldset.form__enter
        .form__input
            input(type="text" name="login" placeholder="Логин")
            input(type="text" name="pass" placeholder="Пароль")
        input(type="submit" value="Войти")
        //забыли пароль
        a.form__forget(href="#") Забыли пароль?
        
    //регистрация через соц. сети
    fieldset.form__socials
        p.form__title Войти с помощью:
        ul
            li: a.form__socials--vk(href="#")
            li: a.form__socials--fb(href="#")
            li: a.form__socials--twitter(href="#")
            li: a.form__socials--odnoklassniki(href="#")
            li: a.form__socials--google(href="#")
                
    //регистрация
    fieldset.form__reg
        p.form__title Регистрация в Fastflud:
        .form__input
            .form__required-l
                input(type="text" name="login" placeholder="E-mail")
                span.form__required
            .form__required-l
                input(type="text" name="login" placeholder="Логин")
                span.form__required
            .form__required-l
                input(type="text" name="login" placeholder="Пароль")
                span.form__required
        //капча
        .form__input.capcha-l
            .capcha
            .form__required-l
                input(type="text" name="login" placeholder="Капча" required)
                span.form__required
        
        input(type="submit" value="Регистрация")
        