//форма регистрации
.form--add-container.form
    input.form-menu__controls(type="radio" name="menu-controls" id="for-form-site" value="site" checked)
    input.form-menu__controls(type="radio" name="menu-controls" id="for-form-logo" value="logo")
    input.form-menu__controls(type="radio" name="menu-controls" id="for-form-trash" value="trash")
    .form__title-l
        p.form__title.form__title Хочу предложить пост
            nav.top-menu.row
                ul
                    li: label(for="for-form-site")
                        .top-menu__img
                            img(src="../img/icon-site--white.png")
                        | Сайты
                    li: label(for="for-form-logo")
                        .top-menu__img
                            img(src="../img/icon-logo--white.png")
                        | Логотипы
                    li: label(for="for-form-trash")
                        .top-menu__img
                            img(src="../img/icon-more--white.png")
                        | Прочий хлам
    a.form__esc(href="#")
    form.form--add(action="#" method="post" name="add" id="add" enctype="multipart/form-data")

        //идентификация
        .form__identification
            //поле входа
            fieldset.form__enter
                .row
                    .col-md-4.col-md-offset-2
                        input.form__input(type="text" name="login" placeholder="Логин")
                    .col-md-4
                        input.form__input(type="password" name="pass" placeholder="Пароль")
                    .col-md-12
                        //запомнить меня
                        .form__remember
                            input(type="checkbox" name="remember" id="remember" checked)
                            label(for="remember")
                                span
                                | Запомнить меня
                    .col-md-12
                        input(type="submit" value="Войти") 
                //забыли пароль
                a.form__forget(href="#") Забыли пароль?

            //регистрация через соц. сети
            fieldset.form__socials
                p.form__title.form__title--regular Войти с помощью:
                .row
                    .col-md-12
                        ul
                            li: a.form__socials--vk(href="#")
                            li: a.form__socials--fb(href="#")
                            li: a.form__socials--twitter(href="#")
                            li: a.form__socials--odnoklassniki(href="#")
                            li: a.form__socials--google(href="#")

            //регистрация
            fieldset.form__reg
                p.form__title.form__title--regular Регистрация в Fastflud:
                .form__input
                    .row
                        .col-md-4.col-md-offset-2
                            .form__required-l
                                input(type="email" name="email" placeholder="E-mail")
                                span.form__required
                        .col-md-4
                            .form__required-l
                                input(type="text" name="login" placeholder="Логин")
                                span.form__required
                        .col-md-4.col-md-offset-2
                            .form__required-l
                                input(type="password" name="pass" placeholder="Пароль")
                                span.form__required
                        .col-md-4
                            .form__required-l
                                input(type="password" name="pass-repeat" placeholder="Повторите пароль")
                                span.form__required
                //капча
                .form__input.capcha-l
                    .row
                        .col-md-6
                            .capcha
                        .col-md-6
                            .form__required-l
                                input(type="text" name="capcha" placeholder="Капча" required)
                                span.form__required

                        .col-md-12
                            input(type="submit" value="Регистрация")


    block form-add_site
    block form-add_logo
    block form-add_trash